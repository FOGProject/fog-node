<section class="content-header">
  <div class="container-fluid">
  </div>
</section>
<section class="content">
  <div class="container-fluid">
    <% // Overview boxes %>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">System Overview</h3>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
              </button>
              <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <div class="container">
              <div class="row">
                <div class="col-md-4">
                  <div class="card">
                     <div class="card-header">
                       <h3 class="card-title">Server Information</h3>
                     </div>
                     <div class="card-body">
                       <div class="row">
                         <div class="col-md-4">
                           <strong>Server IP</strong>
                         </div>
                         <div class="col-md-8">
                           <%= webserver %>
                         </div>
                       </div>
                       <div class="row">
                         <div class="col-md-4">
                           <strong>CPU Load</strong>
                         </div>
                         <div class="col-md-8">
                           <%= loadaverage %>
                         </div>
                       </div>
                       <div class="row">
                         <div class="col-md-4">
                           <strong>Uptime</strong>
                         </div>
                         <div class="col-md-8">
                           <%= uptime %>
                         </div>
                       </div>
                     </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Activity</h3>
                    </div>
                    <div class="card-body">
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Disk Usage</h3>
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <div class="col-md-8">
                          <div class="chart-responsive">
                            <canvas id="diskUsage" class="chartjs-render-monitor"></canvas>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <input type="hidden" id="free" value="<%= free %>">
                          <input type="hidden" id="used" value="<%= used %>">
                          <input type="hidden" id="size" value="<%= size %>">
                          <ul class="chart-legend clearfix">
                            <% legend.forEach(async (item) => { %>
                            <li><i class="fa fa-circle text-<%= item.color %>"></i> <%= item.name %></li>
                            <% }); %>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% // End System Overview %>
    <% // Imaging History %>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Imaging History</h3>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
              </button>
              <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
          </div>
        </div>
      </div>
    </div>
    <% // End Imaging History %>
    <% // Bandwidth %>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Bandwidth</h3>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
              </button>
              <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
          </div>
        </div>
      </div>
    </div>
    <% // End Bandwidth %>
  </div>
</section>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
